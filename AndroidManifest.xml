<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.privacycontrol"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS" />



    <application android:label="@string/app_name" android:name="com.android.privacycontrol.services.App" android:icon="@drawable/alert">

        <service android:name="com.android.privacycontrol.services.AppService" android:label="AppService"/>


        <activity android:name=".ui.ContactsActivity" android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.ContactsFragmentActivity" android:label="@string/app_name" android:screenOrientation="portrait"/>
    </application>
</manifest> 
